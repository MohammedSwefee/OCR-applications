<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#7ccadf" />
            <gradient android:angle="-90" android:startColor="#77d7fd" android:endColor="#72c6da"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#77d2e4" />
            <solid android:color="#6ebad1"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#8ad6ea" />
            <gradient android:angle="-90" android:startColor="#5cbde4" android:endColor="#89bad2" />
        </shape>
    </item>
</selector>