<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dd"
    tools:context="dev.edmt.androidcamerarecognitiontext.car.check">


    <LinearLayout

        android:id="@+id/new_car"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingTop="100px">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView11"
                    android:textColor="#fdfdfd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Car number"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/car_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="000000"
                    android:textColor="#fdfdfd"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:textColor="#fdfdfd"
                    android:layout_height="wrap_content"
                    android:text="owner name"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/owner_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fdfdfd"
                    android:hint="Jone Kiri"
                    android:textSize="24sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:textColor="#fdfdfd"
                    android:layout_height="wrap_content"
                    android:text="check Date"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/check_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fdfdfd"
                    android:hint="01/01/2001"
                    android:textSize="24sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="222dp"
                    android:layout_height="wrap_content"
                    android:textColor="#fdfdfd"
                    android:text="color"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/car_color"
                    android:layout_width="216dp"
                    android:layout_height="wrap_content"
                    android:textColor="#fdfdfd"
                    android:hint="red"
                    android:textSize="24sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textColor="#fdfdfd"
                    android:text="model"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/car_model"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="#fdfdfd"
                    android:hint="tiggo 2013"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fdfdfd"
                    android:text="is wanted?"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/wanted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="wanted or not"
                    android:textColor="#fdfdfd"
                    android:textSize="24sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="case"
                    android:textColor="#fdfdfd"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/car_case"
                    android:layout_width="wrap_content"
                    android:textColor="#fdfdfd"
                    android:layout_height="wrap_content"
                    android:hint="critical or normal"
                    android:textSize="24sp" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView android:layout_height="50dp" />
            </TableRow>
        </TableLayout>






    </LinearLayout>
</android.support.constraint.ConstraintLayout>
