<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dev.edmt.androidcamerarecognitiontext.zain.zain"
    android:id="@+id/activity_zain"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/cc">

    <SurfaceView
        android:id="@+id/surface_viewzain"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:focusableInTouchMode="true" />

    <TextView
        android:id="@+id/text_viewzain"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/surface_view"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/read"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:visibility="invisible" />

    <Button
        android:id="@+id/readzain"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#87a3ae"
        android:text="Read" />

    <EditText
        android:id="@+id/wwzain"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/text_viewzain"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/surface_viewzain"
        android:background="#b9d1da"
        android:ems="10"
        android:inputType="phone"
        android:text="123" />

    <ImageView
        android:id="@+id/call"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/wwzain"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        app:srcCompat="@drawable/ic_phone" />



</RelativeLayout>
